{% extends 'base.html.twig' %}


{% block body %}

<div class="container">
  <h3> Liste des pièces détachées </h3>

  <div class="w3-row-padding w3-margin-bottom">
    <div class="w3-quarter">
      <div class="w3-container w3-red w3-padding-16">
        <div class="w3-left"><i class="fa fa-diamond w3-xxxlarge"></i></div>
        <div class="w3-right">
          <h3></h3>
        </div>
        <div class="w3-clear"></div>
        <h4> <a href="{{ path('ho_create_spare_part') }}">  Ajouter une pièce détachée  </a> </h4>
      </div>
  </div>
</div>

  <br/><br/>
  <input id="myInput"  placeholder="Recherche.." > <br/><br/>
           
  <table class="table table-striped">
    <thead>
      <tr>
        <th> Domaine </th>
        <th> Nombre de pièces  </th>
        <th> Voir les pièces </th>
        
      </tr>
    </thead>
    <tbody id="myTable">
    {% for type in types %}
      <tr>
        <td> {{ type.name }} </td>
        <td> {{ nbrStock[type.id] }}  </td>  
        <td> <a href="{{ path('ho_spare_parts_by_type',{'id':type.id}) }}" class="btn btn-primary"> lien </a></td>
        
      </tr>
    {% endfor %}
      
    </tbody>
  </table>
</div>
 <br/><br/><br/><br/><br/>
<script>
$(document).ready(function(){
	$("#myInput").on("keyup", function(){
	var value = $(this).val().toLowerCase();

	$("#myTable tr").each(function(){
	 $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
	});
	});
});

</script>



{% endblock %}