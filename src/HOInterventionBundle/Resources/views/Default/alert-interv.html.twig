    <li>
     {{ form_label(form.equipment,"Equipement") }}
     {{ form_widget(form.equipment,{'attr':{'class':'field-select' }}) }} 
    </li>  
    <li>
     {{ form_label(form.repairer,"Intervenant *") }}
     {{ form_widget(form.repairer,{'attr':{'class':'field-select' }}) }} 
    </li>  
    <li>
     {{ form_label(form.dateBegin,"Date d'attribution *") }}
     {{ form_widget(form.dateBegin,{'attr':{'class':'field-long' }}) }} 
     </li>  
                    
    {{ form_rest(form) }}
