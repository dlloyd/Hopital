{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
<h3>  Alerte attribution </h3>
<br/><br/>
<strong>Service : </strong>{{ alert.service.name  }} <br/>
<strong>Date de demande:</strong>{{ alert.date}} <br/>
<strong>Cat√©gorie de l'alerte:</strong>{{ alert.alertCategory.name}}
<br/>
<strong>Description: </strong><br/>
<p>{{ alert.designation }}</p>
